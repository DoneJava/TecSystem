@model IEnumerable<TecSystem.Models.Lista>

<div id="listaContainer">
    <form asp-action="AdicionarLista" method="post" id="addListaForm" class="mt-3">
        <div class="input-group">
            <input type="text" name="nome" class="form-control" placeholder="Nova Lista" required maxlength="100">
            <div class="input-group-append">
                <button class="btn btn-primary" type="submit" id="submitListaButton">Adicionar</button>
            </div>
        </div>
    </form>
    <ul class="nav flex-column mt-3" id="listaNomes">
        @foreach (var lista in Model)
        {
            <li class="nav-item d-flex justify-content-between align-items-center lista-item">
                <a class="nav-link flex-grow-1" href="#">@lista.Nome</a>
                <form class="excluirListaForm mb-0" method="post">
                    <input type="hidden" name="nome" value="@lista.Nome" />
                    <button type="submit" class="btn btn-sm btn-outline-danger btn-excluir">
                        <i class="fas fa-trash"></i>
                    </button>
                </form>
            </li>
        }
    </ul>
</div>

<script src="~/js/listas.js"></script>
