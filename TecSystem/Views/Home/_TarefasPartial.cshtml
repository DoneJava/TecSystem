@model IEnumerable<TecSystem.Models.Tarefa>

<link rel="stylesheet" href="~/css/tarefas.css" />

<div id="tarefasContainer">
    @foreach (var tarefa in Model)
    {
        <div class="task-card card mb-3 @(tarefa.Concluida ? "tarefa-concluida" : "")">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <input type="checkbox" class="form-check-input changeStatusCheckbox" data-id="@tarefa.Id" @(tarefa.Concluida ? "checked" : "")>
                    <h5 class="card-title ml-2">@tarefa.Titulo</h5>
                    <span class="ml-auto">@(tarefa.Concluida ? tarefa.DataConclusao.ToString("dd/MM/yyyy HH:mm") : "")</span>
                </div>
                <p class="card-text">@tarefa.Descricao</p>
                <div class="d-flex justify-content-between">
                    <div></div>
                    <div class="task-actions">
                        <form class="excluirTarefaForm" method="post">
                            <input type="hidden" name="id" value="@tarefa.Id" />
                            <button type="submit" class="btn btn-sm btn-outline-danger btn-excluir mr-2">
                                <i class="fas fa-trash"></i>
                            </button>
                        </form>
                        <button class="btn btn-sm btn-outline-primary btn-editar" data-toggle="modal" data-target="#editarTarefaModal" data-id="@tarefa.Id" data-titulo="@tarefa.Titulo" data-descricao="@tarefa.Descricao">
                            <i class="fas fa-edit"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<script src="~/js/tarefas.js"></script>
